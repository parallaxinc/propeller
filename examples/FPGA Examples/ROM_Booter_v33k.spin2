                        rdbyte  R0,tos2         ' read source byte
                        sumc    tos2,#1         ' inc or dec depending upon carry
                        wrbyte  R0,tos1         ' write destination byte
                        sumc    tos1,#1         ' inc or dec depending upon carry!!
.end                    jmp     #DROP3

