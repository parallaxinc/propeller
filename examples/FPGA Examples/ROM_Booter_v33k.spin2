'+-----------------------------------------------------------------------------+
'+ Read DIR (n Sectors):  Search for "<_fname/_fname2>"                        +
'+-----------------------------------------------------------------------------+
_readDIR        mov     fname,            ##_fname1a    ' copy _fname1 -> fname
                mov     fname+1,          ##_fname1b    '
                mov     fname+2,          ##_fname1c    '
