  _csum2   = ("P" + "r"<<8 + "o"<<16 + "P"<<24)  ' "ProP" checksum (reversed)

  _fname1a = ("_" + "B"<<8 + "O"<<16 + "O"<<24)  '\\ filename...
  _fname1b = ("T" + "_"<<8 + "P"<<16 + "2"<<24)  '||   8.3 +$00
  _fname1c = ("B" + "I"<<8 + "X"<<16 + $00<<24)  '//
  _fname2c = ("B" + "I"<<8 + "Y"<<16 + $00<<24)  '//

