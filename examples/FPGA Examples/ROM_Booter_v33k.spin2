                rdlong  reply,            bufad         '
                cmp     reply,            ##_csum   wz  ' ="Prop"?
        if_e    jmp     #@_success80                    ' y: go load it
                cmp     reply,            ##_csum2  wz  ' ="ProP"? sector/size?
        if_ne   RET                                     ' return "NZ" = not found
'               ----------------------------------------
                mov     bufad,            #$174         ' get sector start
